  showPosition    Boolean  @default(true)
  showDepartment  Boolean  @default(true)
  showBio         Boolean  @default(true)
  showLocation    Boolean  @default(true)
  showPhone       Boolean  @default(false)
  showEmail       Boolean  @default(false)
