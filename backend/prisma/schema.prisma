  invoice         Invoice         @relation(fields: [invoiceId], references: [id], onDelete: Cascade)
  plan            PlanConfig?     @relation(fields: [planId], references: [id])

  @@index([invoiceId])
  @@index([order])
  @@map("invoice_items")
