model user_profiles {
  id                  String    @id
  userId              String    @unique
  bio                 String?
  headline            String?
  birthDate           DateTime?
  city                String?
  province            String?
  country             String?   @default("Espanya")
  organization        String?
  department          String?
  position            String?
  yearsInPublicSector Int?
  website             String?
  publicEmail         String?
  phone               String?
  isPublic            Boolean   @default(true)
  showEmail           Boolean   @default(false)
  showPhone           Boolean   @default(false)
  showBirthDate       Boolean   @default(false)
  createdAt           DateTime  @default(now())
  updatedAt           DateTime
  User                User      @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model user_skills {
  id           String   @id
  userId       String
  name         String
  category     String?
  level        Int?
  isEndorsed   Boolean  @default(false)
  endorsements Int      @default(0)
  createdAt    DateTime @default(now())
  updatedAt    DateTime
  User         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, name])
  @@index([userId, category])
}

model user_social_links {
  id         String   @id
  userId     String
  platform   String
  url        String
  username   String?
  isVerified Boolean  @default(false)
  createdAt  DateTime @default(now())
  updatedAt  DateTime
  User       User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, platform])
}

model verification_tokens {
  id        String    @id
  token     String    @unique
  type      TokenType
  userId    String
  expiresAt DateTime
  usedAt    DateTime?
  createdAt DateTime  @default(now())
  User      User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([expiresAt])
  @@index([token])
  @@index([userId])
}

