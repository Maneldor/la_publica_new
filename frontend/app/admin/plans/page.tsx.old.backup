'use client';

import { useState, useEffect } from 'react';
import { useSession } from 'next-auth/react';

interface PlanConfig {
  id: string;
  planType: string;
  nombre: string;
  nombreCorto: string;
  descripcion: string;
  precioMensual: number;
  precioAnual: number | null;
  limitesJSON: string;
  caracteristicas: string;
  color: string;
  icono: string;
  orden: number;
  destacado: boolean;
  activo: boolean;
  visible: boolean;
  esSistema: boolean;
  createdAt: string;
  updatedAt: string;
}

interface PlanLimites {
  maxUsuarios?: number;
  maxStorage?: number;
  maxDocumentos?: number;
  maxOfertas?: number;
  [key: string]: any;
}

type ViewMode = 'table' | 'cards';
type ModalMode = 'create' | 'edit';

export default function AdminPlansPage() {
  const { data: session } = useSession();
  const [planes, setPlanes] = useState<PlanConfig[]>([]);
  const [loading, setLoading] = useState(true);
  const [selectedPlan, setSelectedPlan] = useState<PlanConfig | null>(null);
  const [showModal, setShowModal] = useState(false);
  const [modalMode, setModalMode] = useState<ModalMode>('edit');
  const [saving, setSaving] = useState(false);
  const [viewMode, setViewMode] = useState<ViewMode>('cards');

  const [formData, setFormData] = useState({
    planType: '',
    nombre: '',
    nombreCorto: '',
    descripcion: '',
    precioMensual: 0,
    precioAnual: 0,
    color: '#3B82F6',
    icono: 'üì¶',
    destacado: false,
    activo: true,
    visible: true,
    limites: {
      maxUsuarios: 1,
      maxStorage: 5,
      maxDocumentos: 10,
      maxOfertas: 3
    },
    caracteristicas: [] as string[]
  });

  useEffect(() => {
    cargarPlanes();
  }, []);

  const cargarPlanes = async () => {
    try {
      setLoading(true);
      const response = await fetch('/api/plans');
      if (!response.ok) throw new Error('Error al cargar planes');
      const data = await response.json();
      console.log('Planes recibidos:', data.data);
      console.log('Primer plan:', data.data[0]);
      if (data.data[0]) {
        console.log('Type of caracteristicas:', typeof data.data[0].caracteristicas);
        console.log('Caracteristicas value:', data.data[0].caracteristicas);
      }
      setPlanes(data.data || []);
    } catch (error) {
      console.error('Error:', error);
      alert('Error al carregar els plans');
    } finally {
      setLoading(false);
    }
  };

  const abrirModalCreacion = () => {
    setModalMode('create');
    setSelectedPlan(null);
    setFormData({
      planType: '',
      nombre: '',
      nombreCorto: '',
      descripcion: '',
      precioMensual: 0,
      precioAnual: 0,
      color: '#3B82F6',
      icono: 'üì¶',
      destacado: false,
      activo: true,
      visible: true,
      limites: {
        maxUsuarios: 1,
        maxStorage: 5,
        maxDocumentos: 10,
        maxOfertas: 3
      },
      caracteristicas: []
    });
    setShowModal(true);
  };

  const abrirModalEdicion = (plan: PlanConfig) => {
    setModalMode('edit');
    setSelectedPlan(plan);

    const limites = JSON.parse(plan.limitesJSON);
    const caracteristicas = JSON.parse(plan.caracteristicas);

    setFormData({
      planType: plan.planType,
      nombre: plan.nombre,
      nombreCorto: plan.nombreCorto,
      descripcion: plan.descripcion,
      precioMensual: plan.precioMensual,
      precioAnual: plan.precioAnual || 0,
      color: plan.color,
      icono: plan.icono,
      destacado: plan.destacado,
      activo: plan.activo,
      visible: plan.visible,
      limites: limites,
      caracteristicas: caracteristicas
    });

    setShowModal(true);
  };

  const cerrarModal = () => {
    setShowModal(false);
    setSelectedPlan(null);
    setModalMode('edit');
  };

  const crearPlan = async () => {
    try {
      setSaving(true);

      if (!formData.nombre.trim()) {
        alert('El nom del pla √©s obligatori');
        return;
      }

      if (!formData.planType.trim()) {
        alert('El tipus de pla √©s obligatori');
        return;
      }

      const response = await fetch('/api/plans', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({
          planType: formData.planType.toUpperCase().replace(/\s/g, '_'),
          nombre: formData.nombre,
          nombreCorto: formData.nombreCorto || formData.nombre,
          descripcion: formData.descripcion,
          precioMensual: formData.precioMensual,
          precioAnual: formData.precioAnual || null,
          color: formData.color,
          icono: formData.icono,
          destacado: formData.destacado,
          activo: formData.activo,
          visible: formData.visible,
          limites: formData.limites,
          caracteristicas: formData.caracteristicas
        })
      });

      if (!response.ok) {
        const error = await response.json();
        throw new Error(error.error || 'Error al crear el plan');
      }

      alert('Pla creat correctament');
      cerrarModal();
      cargarPlanes();

    } catch (error) {
      console.error('Error:', error);
      alert(error instanceof Error ? error.message : 'Error al crear el pla');
    } finally {
      setSaving(false);
    }
  };

  const guardarCambios = async () => {
    if (!selectedPlan) return;

    try {
      setSaving(true);

      const response = await fetch(`/api/plans/${selectedPlan.id}`, {
        method: 'PATCH',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({
          nombre: formData.nombre,
          nombreCorto: formData.nombreCorto,
          descripcion: formData.descripcion,
          precioMensual: formData.precioMensual,
          precioAnual: formData.precioAnual || null,
          color: formData.color,
          icono: formData.icono,
          destacado: formData.destacado,
          activo: formData.activo,
          visible: formData.visible,
          limites: formData.limites,
          caracteristicas: formData.caracteristicas
        })
      });

      if (!response.ok) {
        const error = await response.json();
        throw new Error(error.error || 'Error al guardar');
      }

      alert('Pla actualitzat correctament');
      cerrarModal();
      cargarPlanes();

    } catch (error) {
      console.error('Error:', error);
      alert(error instanceof Error ? error.message : 'Error al guardar els canvis');
    } finally {
      setSaving(false);
    }
  };

  const handleSubmit = () => {
    if (modalMode === 'create') {
      crearPlan();
    } else {
      guardarCambios();
    }
  };

  const toggleActivo = async (plan: PlanConfig, e: React.MouseEvent) => {
    e.stopPropagation();

    try {
      const response = await fetch(`/api/plans/${plan.id}`, {
        method: 'PATCH',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ activo: !plan.activo })
      });

      if (!response.ok) throw new Error('Error al cambiar estado');

      cargarPlanes();
    } catch (error) {
      console.error('Error:', error);
      alert('Error al canviar l\'estat del pla');
    }
  };

  const agregarCaracteristica = () => {
    setFormData({
      ...formData,
      caracteristicas: [...formData.caracteristicas, '']
    });
  };

  const actualizarCaracteristica = (index: number, valor: string) => {
    const nuevas = [...formData.caracteristicas];
    nuevas[index] = valor;
    setFormData({ ...formData, caracteristicas: nuevas });
  };

  const eliminarCaracteristica = (index: number) => {
    const nuevas = formData.caracteristicas.filter((_, i) => i !== index);
    setFormData({ ...formData, caracteristicas: nuevas });
  };

  if (loading) {
    return (
      <div className="flex items-center justify-center h-64">
        <p className="text-gray-600">Carregant plans...</p>
      </div>
    );
  }

  return (
    <div className="space-y-6">
      <div className="flex items-center justify-between">
        <div>
          <h1 className="text-2xl font-bold text-gray-900">Gesti√≥ de Plans</h1>
          <p className="text-sm text-gray-600 mt-1">
            Configura els plans de subscripci√≥ i els seus l√≠mits
          </p>
        </div>

        <div className="flex items-center gap-3">
          <button
            onClick={abrirModalCreacion}
            className="px-4 py-2 bg-blue-600 text-white rounded-lg font-medium hover:bg-blue-700 transition-colors flex items-center gap-2"
          >
            <span className="text-lg">+</span>
            Nou Pla
          </button>

          <div className="flex items-center gap-2 bg-gray-100 rounded-lg p-1">
            <button
              onClick={() => setViewMode('cards')}
              className={`px-4 py-2 rounded-md text-sm font-medium transition-colors ${
                viewMode === 'cards'
                  ? 'bg-white text-gray-900 shadow-sm'
                  : 'text-gray-600 hover:text-gray-900'
              }`}
            >
              üé¥ Targetes
            </button>
            <button
              onClick={() => setViewMode('table')}
              className={`px-4 py-2 rounded-md text-sm font-medium transition-colors ${
                viewMode === 'table'
                  ? 'bg-white text-gray-900 shadow-sm'
                  : 'text-gray-600 hover:text-gray-900'
              }`}
            >
              üìä Taula
            </button>
          </div>
        </div>
      </div>

      {viewMode === 'cards' && (
        <div className="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
          {planes.map((plan) => {
            const limites: PlanLimites = JSON.parse(plan.limitesJSON);
            const caracteristicas: string[] = JSON.parse(plan.caracteristicas);

            return (
              <div
                key={plan.id}
                className={`relative bg-white rounded-xl border-2 transition-all hover:shadow-lg ${
                  plan.destacado ? 'border-yellow-400 shadow-lg' : 'border-gray-200'
                }`}
                style={{
                  borderTopColor: plan.destacado ? '#FBBF24' : plan.color,
                  borderTopWidth: '4px'
                }}
              >
                {plan.destacado && (
                  <div className="absolute -top-3 left-1/2 transform -translate-x-1/2">
                    <span className="bg-yellow-400 text-yellow-900 text-xs font-bold px-3 py-1 rounded-full shadow-md">
                      ‚≠ê M√©s Popular
                    </span>
                  </div>
                )}

                <div className="p-6">
                  <div className="text-center mb-6">
                    <div className="text-4xl mb-2">{plan.icono}</div>
                    <h3 className="text-xl font-bold text-gray-900">{plan.nombre}</h3>
                    <p className="text-sm text-gray-500 mt-1">{plan.planType}</p>
                  </div>

                  <div className="text-center mb-6">
                    <div className="flex items-baseline justify-center">
                      <span className="text-4xl font-bold text-gray-900">
                        {plan.precioMensual}‚Ç¨
                      </span>
                      <span className="text-gray-500 ml-2">/mes</span>
                    </div>
                    {plan.precioAnual && (
                      <p className="text-sm text-gray-500 mt-1">
                        o {plan.precioAnual}‚Ç¨/any
                      </p>
                    )}
                  </div>

                  <p className="text-sm text-gray-600 text-center mb-6">
                    {plan.descripcion}
                  </p>

                  <div className="space-y-2 mb-6">
                    <div className="flex items-center text-sm text-gray-600">
                      <span className="mr-2">üë•</span>
                      <span>{limites.maxUsuarios} usuaris</span>
                    </div>
                    <div className="flex items-center text-sm text-gray-600">
                      <span className="mr-2">üíæ</span>
                      <span>{limites.maxStorage} GB</span>
                    </div>
                    <div className="flex items-center text-sm text-gray-600">
                      <span className="mr-2">üìÑ</span>
                      <span>{limites.maxDocumentos} documents</span>
                    </div>
                    <div className="flex items-center text-sm text-gray-600">
                      <span className="mr-2">üéÅ</span>
                      <span>{limites.maxOfertas} ofertes</span>
                    </div>
                  </div>

                  <div className="space-y-2 mb-6 border-t pt-4">
                    {caracteristicas.slice(0, 5).map((caracteristica, idx) => (
                      <div key={idx} className="flex items-start text-sm">
                        <span className="text-green-500 mr-2">‚úì</span>
                        <span className="text-gray-600">{caracteristica}</span>
                      </div>
                    ))}
                  </div>

                  <div className="flex flex-wrap gap-2 mb-4">
                    <span
                      className={`inline-flex px-2 py-1 text-xs font-semibold rounded-full ${
                        plan.activo
                          ? 'bg-green-100 text-green-800'
                          : 'bg-red-100 text-red-800'
                      }`}
                    >
                      {plan.activo ? 'Actiu' : 'Inactiu'}
                    </span>
                    {plan.esSistema && (
                      <span className="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-blue-100 text-blue-800">
                        üîí Sistema
                      </span>
                    )}
                  </div>

                  <div className="flex gap-2">
                    <button
                      onClick={() => abrirModalEdicion(plan)}
                      className="flex-1 px-4 py-2 text-sm font-medium text-blue-600 bg-blue-50 rounded-lg hover:bg-blue-100 transition-colors"
                    >
                      Editar
                    </button>
                    <button
                      onClick={(e) => toggleActivo(plan, e)}
                      className={`flex-1 px-4 py-2 text-sm font-medium rounded-lg transition-colors ${
                        plan.activo
                          ? 'text-red-600 bg-red-50 hover:bg-red-100'
                          : 'text-green-600 bg-green-50 hover:bg-green-100'
                      }`}
                    >
                      {plan.activo ? 'Desactivar' : 'Activar'}
                    </button>
                  </div>
                </div>
              </div>
            );
          })}
        </div>
      )}

      {viewMode === 'table' && (
        <div className="bg-white rounded-lg shadow-sm border border-gray-200 overflow-hidden">
          <table className="min-w-full divide-y divide-gray-200">
            <thead className="bg-gray-50">
              <tr>
                <th className="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Pla</th>
                <th className="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Preus</th>
                <th className="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">L√≠mits</th>
                <th className="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Estat</th>
                <th className="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Accions</th>
              </tr>
            </thead>
            <tbody className="bg-white divide-y divide-gray-200">
              {planes.map((plan) => {
                const limites: PlanLimites = JSON.parse(plan.limitesJSON);

                return (
                  <tr key={plan.id} className="hover:bg-gray-50">
                    <td className="px-6 py-4 whitespace-nowrap">
                      <div className="flex items-center">
                        <span className="text-2xl mr-3">{plan.icono}</span>
                        <div>
                          <div className="text-sm font-medium text-gray-900">{plan.nombre}</div>
                          <div className="text-xs text-gray-500">{plan.planType}</div>
                        </div>
                      </div>
                    </td>
                    <td className="px-6 py-4 whitespace-nowrap">
                      <div className="text-sm text-gray-900">{plan.precioMensual}‚Ç¨/mes</div>
                      {plan.precioAnual && (
                        <div className="text-xs text-gray-500">{plan.precioAnual}‚Ç¨/any</div>
                      )}
                    </td>
                    <td className="px-6 py-4">
                      <div className="text-xs space-y-1">
                        <div className="text-gray-600">üë• {limites.maxUsuarios || 0} usuaris</div>
                        <div className="text-gray-600">üíæ {limites.maxStorage || 0} GB</div>
                        <div className="text-gray-600">üìÑ {limites.maxDocumentos || 0} docs</div>
                        <div className="text-gray-600">üéÅ {limites.maxOfertas || 0} ofertes</div>
                      </div>
                    </td>
                    <td className="px-6 py-4 whitespace-nowrap">
                      <div className="space-y-1">
                        <span className={`inline-flex px-2 py-1 text-xs font-semibold rounded-full ${
                          plan.activo ? 'bg-green-100 text-green-800' : 'bg-red-100 text-red-800'
                        }`}>
                          {plan.activo ? 'Actiu' : 'Inactiu'}
                        </span>
                        {plan.destacado && (
                          <span className="block text-xs text-yellow-600">‚≠ê Destacat</span>
                        )}
                        {plan.esSistema && (
                          <span className="block text-xs text-blue-600">üîí Sistema</span>
                        )}
                      </div>
                    </td>
                    <td className="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                      <button
                        onClick={() => abrirModalEdicion(plan)}
                        className="text-blue-600 hover:text-blue-900 mr-3"
                      >
                        Editar
                      </button>
                      <button
                        onClick={(e) => toggleActivo(plan, e)}
                        className={`${
                          plan.activo ? 'text-red-600 hover:text-red-900' : 'text-green-600 hover:text-green-900'
                        }`}
                      >
                        {plan.activo ? 'Desactivar' : 'Activar'}
                      </button>
                    </td>
                  </tr>
                );
              })}
            </tbody>
          </table>
        </div>
      )}

      {showModal && (
        <div className="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50 p-4">
          <div className="bg-white rounded-lg shadow-xl max-w-4xl w-full max-h-[90vh] overflow-y-auto">
            <div className="sticky top-0 bg-white border-b border-gray-200 px-6 py-4 flex items-center justify-between">
              <h2 className="text-xl font-bold text-gray-900">
                {modalMode === 'create' ? 'Crear Nou Pla' : `Editar Pla: ${selectedPlan?.nombre}`}
              </h2>
              <button onClick={cerrarModal} className="text-gray-400 hover:text-gray-600">‚úï</button>
            </div>

            <div className="p-6 space-y-6">

              {modalMode === 'create' && (
                <div>
                  <label className="block text-sm font-medium text-gray-700 mb-1">
                    Tipus de Pla <span className="text-red-500">*</span>
                  </label>
                  <input
                    type="text"
                    value={formData.planType}
                    onChange={(e) => setFormData({ ...formData, planType: e.target.value })}
                    className="w-full px-3 py-2 border border-gray-300 rounded-md focus:ring-blue-500 focus:border-blue-500"
                    placeholder="Ex: PROFESSIONAL, ENTERPRISE..."
                  />
                  <p className="text-xs text-gray-500 mt-1">Identificador √∫nic en maj√∫scules (s'auto-formatar√†)</p>
                </div>
              )}

              <div className="grid grid-cols-2 gap-4">
                <div>
                  <label className="block text-sm font-medium text-gray-700 mb-1">
                    Nom del Pla <span className="text-red-500">*</span>
                  </label>
                  <input
                    type="text"
                    value={formData.nombre}
                    onChange={(e) => setFormData({ ...formData, nombre: e.target.value })}
                    className="w-full px-3 py-2 border border-gray-300 rounded-md focus:ring-blue-500 focus:border-blue-500"
                  />
                </div>
                <div>
                  <label className="block text-sm font-medium text-gray-700 mb-1">Nom Curt</label>
                  <input
                    type="text"
                    value={formData.nombreCorto}
                    onChange={(e) => setFormData({ ...formData, nombreCorto: e.target.value })}
                    className="w-full px-3 py-2 border border-gray-300 rounded-md focus:ring-blue-500 focus:border-blue-500"
                  />
                </div>
              </div>

              <div>
                <label className="block text-sm font-medium text-gray-700 mb-1">Descripci√≥</label>
                <textarea
                  value={formData.descripcion}
                  onChange={(e) => setFormData({ ...formData, descripcion: e.target.value })}
                  rows={2}
                  className="w-full px-3 py-2 border border-gray-300 rounded-md focus:ring-blue-500 focus:border-blue-500"
                />
              </div>

              <div className="grid grid-cols-2 gap-4">
                <div>
                  <label className="block text-sm font-medium text-gray-700 mb-1">
                    Preu Mensual (‚Ç¨) <span className="text-red-500">*</span>
                  </label>
                  <input
                    type="number"
                    value={formData.precioMensual}
                    onChange={(e) => setFormData({ ...formData, precioMensual: parseFloat(e.target.value) })}
                    className="w-full px-3 py-2 border border-gray-300 rounded-md focus:ring-blue-500 focus:border-blue-500"
                    step="0.01"
                    min="0"
                  />
                </div>
                <div>
                  <label className="block text-sm font-medium text-gray-700 mb-1">
                    Preu Anual (‚Ç¨) <span className="text-gray-400 text-xs">(opcional)</span>
                  </label>
                  <input
                    type="number"
                    value={formData.precioAnual}
                    onChange={(e) => setFormData({ ...formData, precioAnual: parseFloat(e.target.value) })}
                    className="w-full px-3 py-2 border border-gray-300 rounded-md focus:ring-blue-500 focus:border-blue-500"
                    step="0.01"
                    min="0"
                  />
                </div>
              </div>

              <div>
                <h3 className="text-sm font-semibold text-gray-900 mb-3">L√≠mits del Pla</h3>
                <div className="grid grid-cols-2 gap-4">
                  <div>
                    <label className="block text-sm font-medium text-gray-700 mb-1">M√†xim Usuaris</label>
                    <input
                      type="number"
                      value={formData.limites.maxUsuarios}
                      onChange={(e) => setFormData({
                        ...formData,
                        limites: { ...formData.limites, maxUsuarios: parseInt(e.target.value) }
                      })}
                      className="w-full px-3 py-2 border border-gray-300 rounded-md focus:ring-blue-500 focus:border-blue-500"
                      min="1"
                    />
                  </div>
                  <div>
                    <label className="block text-sm font-medium text-gray-700 mb-1">M√†xim Storage (GB)</label>
                    <input
